
<div class="pure-u-1">
    <div class="nav">
      <ul>
        <% class_names = (@category_id == 0 ? 'pure-button pure-button-active button-current' : 'pure-button')  %>
        <li> <%= link_to button_tag(type: 'button', class: class_names) {'Home'}, root_path %> </li>
        <% @categories.each do |category| %>
            <% class_names = (@category_id.to_i == category.id ? 'pure-button pure-button-active button-current' : 'pure-button')  %>
            <li> <%= link_to button_tag(type: 'button', class: class_names) {category.name}, category %> </li>
        <% end %>
      </ul>
    </div>
</div>
