
<div class="pure-u-1">
    <div class="nav">
      <ul>
        <% class_names = (@category_id == 0 ? 'pure-button lss-button lss-button-blue' : 'pure-button lss-button lss-button-default')  %>
        <li> <%= link_to button_tag(type: 'button', class: class_names) {'Home'}, root_path %> </li>
        <% @categories.each do |category| %>
            <% class_names = (@category_id.to_i == category.id ? 'pure-button lss-button lss-button-blue' : 'pure-button lss-button lss-button-default')  %>
            <li> <%= link_to button_tag(type: 'button', class: class_names) {category.name}, category %> </li>
        <% end %>
        <% if @user %>
            <%= link_to button_tag(type: 'button', class: 'user pure-button lss-button lss-button-green') {@user.name}, user_path(@user.id) %>
        <% else %>
            <%= link_to button_tag(type: 'button', class: 'user pure-button lss-button lss-button-green') {'login'}, login_path %>
        <% end %>
      </ul>

    </div>
</div>
