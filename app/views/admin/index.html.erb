<div class="pure-u-1-5">
    <%= button_to 'SCAN Videos', admin_scan_path, class: 'pure-button pure-button-primary', remote: true  %>
    <%= button_to 'Clean Up', admin_clean_path, class: 'pure-button pure-button-primary', remote: true  %>
  </div>
  <div class="pure-u-4-5">
    <div class="result"></div>
  </div>
<script>
  $('form').submit(function(){ $(this).find('input').prop("disabled", true ); });
  $(document).ajaxSuccess(function(){
      $(this).find('input').prop("disabled", false );
      $('.result').empty().append('Finished!');
  });
  $(document).ajaxError(function(){
      $(this).find('input').prop("disabled", false );
      $('.result').empty().append('Error!');
  });
</script>