<div class="player" style="display: none">
    <div class="leanback-player-video">
      <video width="<%= @video.width %>" height="<%= @video.height %>" preload="metadata" controls autoplay>
        <source src="<%= @video.url %>" type='video/webm; codecs="vp8, vorbis"'/>
        <source src="<%= @video.url %>" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"'/>
        <source src="<%= @video.url %>" type='video/ogg; codecs="theora, vorbis"'/>
        <% if @video.with_subtitle? %>
            <track enabled="true" kind="subtitles" label="En/Ch" srclang="en/ch" type="text/x-srt" src="<%= @video.url_subtitle %>"></track>
        <% end %>
      </video>
    </div>
</div>


<%= stylesheet_link_tag 'leanbackPlayer.monochrome' %>
<%= javascript_include_tag 'leanbackPlayer' %>
<%= javascript_include_tag 'leanbackPlayer.en' %>


<script>
    LBP.options = {
        hideControlsTimeout: 2,
        volumeRates: 10,
        defaultVolume: 8,
        seekSkipSec: 5,
        showSubtitles: true
    };
    $('.player').fadeIn(1500);
</script>

